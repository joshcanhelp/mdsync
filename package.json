{
  "name": "@joshcanhelp/mdsync",
  "version": "0.2.0",
  "description": "Sync Markdown files with configurable routing and multi-user support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "mdsync": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "markdown-sync.config.example.cjs",
    ".markdown-sync.user.example.cjs"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "lint": "tsc --noEmit && eslint src && prettier --check \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "pre-commit": "npm run lint && npm run test",
    "mdsync": "tsx src/cli.ts",
    "version:patch": "./scripts/version-bump.sh patch",
    "version:minor": "./scripts/version-bump.sh minor",
    "version:major": "./scripts/version-bump.sh major",
    "release": "./scripts/release.sh"
  },
  "keywords": [
    "markdown",
    "sync",
    "notes",
    "multi-user"
  ],
  "author": "Josh C <josh@joshcanhelp.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshcanhelp/markdown-sync.git"
  },
  "bugs": {
    "url": "https://github.com/joshcanhelp/markdown-sync/issues"
  },
  "homepage": "https://github.com/joshcanhelp/markdown-sync#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "minimatch": "^10.1.1"
  },
  "engines": {
    "node": ">=18"
  }
}
