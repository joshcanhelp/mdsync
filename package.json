{
  "name": "markdown-sync",
  "version": "0.1.0",
  "description": "Sync Markdown files with configurable routing and multi-user support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "markdown-sync": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "pre-commit": "npm run format && npm run lint && npm run test",
    "mdsync": "tsx src/cli.ts"
  },
  "keywords": [
    "markdown",
    "sync",
    "notes",
    "multi-user"
  ],
  "author": "Josh C <josh@joshcanhelp.com>",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^20.0.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "minimatch": "^10.1.1"
  },
  "engines": {
    "node": ">=18"
  }
}
